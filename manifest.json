{
	"manifest_version": 3,
	"name": "Bunny Hole",
	"version": "0.0",

	"description": "Go down a rabbit hole with Bunny Hole",

	"permissions": ["tabs", "webNavigation", "notifications", "storage", "downloads"],

	"icons": {
		"48": "res/icons/icon-48.png",
		"96": "res/icons/icon-96.png"
	},

	"action": {
		"default_icon": {
			"19": "res/icons/icon-19.png",
			"38": "res/icons/icon-38.png"
		},
		"default_popup": "popup.html"
	},

	"sidebar_action": {
		"default_title": "Bunny Hole",
		"default_panel": "sidebar.html",
		"default_icon": "res/icons/icon-96.png"
	},

	"background": {
		"scripts": ["background_scripts/io.mjs", "background_scripts/web_tracker.mjs", "background_scripts/background.js"],
		"type": "module"
	}
}