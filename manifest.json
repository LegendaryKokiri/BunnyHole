{
	"manifest_version": 3,
	"name": "Bunny Hole",
	"version": "1.0",

	"description": "Go down a rabbit hole with Bunny Hole",

	"permissions": ["tabs", "webNavigation", "notifications"],

	"browser_specific_settings": {
		"gecko": {
			"id": "bunnyhole@dev"
		}
	},

	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"action": {
		"default_icon": {
			"19": "icons/icon-19.png",
			"38": "icons/icon-38.png"
		},
		"default_popup": "popup/bunny_hole.html"
	},

	"background": {
		"scripts": ["background_scripts/tab_tracker.js"]
	}
}